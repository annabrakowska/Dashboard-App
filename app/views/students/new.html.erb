<div class="ui three column centered grid">
  <div class="ui form">
    <div class="field">
    <div class="ui top attached label">New Student Information</div>
    <br><br>
      <%= form_with model: Student.new do |form| %>
    </div>
    <div class="field">
      <%= form.text_field :first_name, placeholder: "Enter First Name"%>
    </div>
    <div class="field">
      <%= form.text_field :last_name, placeholder: "Enter Last Name"%>
    </div>
    <div class="field">
      <%= form.text_field :age, placeholder: "Enter Age"%>
    </div>
    <div class="field">
      <%= form.text_field :email, placeholder: "Email"%>
    </div>
    <div class="field">
      <%= form.text_field :password, placeholder: "Password"%>
    </div>
    <div class="field">
      <%= form.text_field :cohort_id, placeholder: "Cohort ID"%>
    </div>

    <%= form.submit "Create Student",  class:"ui inverted orange button" %>
    
    <% end %>
    <%= link_to  "Go back", students_path(@students),  class:"ui inverted orange button" %>
    <div>
  </div>
  </div>
</div>

